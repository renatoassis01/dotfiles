#zinit path
export PATH=$HOME/.zinit/plugins:$PATH

# Aliases
if [[ -r ~/.aliasrc ]]; then
    source ~/.aliasrc
fi

# Custom local config
if [[ -r ~/.zshlocal ]]; then
    source ~/.zshlocal
fi

# nvm
export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm

